!> Test the pres_interp kernel
!>
module pres_interp_kernel_mod_test

  use funit
  use constants_mod, only : r_def, i_def

  implicit none

  private
  public :: test_pres_interp

  @TestCase
  type, extends(TestCase), public :: pres_interp_test_type
    private
    real(kind=r_def), allocatable :: exner(:), data_in(:), ans_data(:), &
         plevs(:), data_out(:)
    integer(i_def), allocatable :: map_in(:), map_out(:)

  contains
    procedure setUp
    procedure tearDown
    procedure test_pres_interp
  end type pres_interp_test_type

  integer(i_def), parameter :: nlev = 2_i_def
  integer(i_def), parameter :: nplev = 2_i_def
  integer(i_def), parameter :: ndf_in = 1_i_def
  integer(i_def), parameter :: ndf_out = 1_i_def
  integer(i_def), parameter :: undf_in = nlev+1_i_def
  integer(i_def), parameter :: undf_out = nplev

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

  implicit none

  class(pres_interp_test_type), intent(inout) :: this

  allocate( this%exner(nlev+1) )
  allocate( this%data_in(nlev+1) )
  allocate( this%data_out(nplev) )
  allocate( this%plevs(nplev) )
  allocate( this%ans_data(nplev) )
  allocate( this%map_in(ndf_in) )
  allocate( this%map_out(ndf_out) )

  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine tearDown( this )

  implicit none

  class(pres_interp_test_type), intent(inout) :: this

  deallocate ( this%exner, this%data_in, this%ans_data, this%plevs, &
               this%map_in, this%map_out, this%data_out)

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_pres_interp( this )

  use pres_interp_kernel_mod, only : pres_interp_code

  implicit none

  class(pres_interp_test_type), intent(inout) :: this

  real(r_def), parameter :: tol = 1.0e-14_r_def
  real(r_def), parameter :: p_zero = 100000.0_r_def
  real(r_def), parameter :: kappa = 1.0_r_def

  ! Input arrays
  this%map_in = 1_i_def
  this%map_out = 1_i_def
  this%plevs(1) = 100000.0_r_def
  this%plevs(2) = 90000.0_r_def

  ! Set initial fields
  this%exner(1) = 0.95_r_def
  this%exner(2) = 0.9_r_def
  this%exner(3) = 0.85_r_def
  this%data_in(1) = 1.0_r_def
  this%data_in(2) = 0.5_r_def
  this%data_in(3) = 0.25_r_def

  ! Set correct answer
  this%ans_data(1) = 1.0_r_def
  this%ans_data(2) = 0.5_r_def

  call pres_interp_code( nlev,           &
                         this%data_in,   &
                         this%exner,     &
                         nplev,          &
                         this%plevs,     &
                         this%data_out,  &
                         p_zero,         &
                         kappa,          &
                         ndf_in,         &
                         undf_in,        &
                         this%map_in,    &
                         ndf_out,        &
                         undf_out,       &
                         this%map_out)

  @assertEqual(this%ans_data(:), this%data_out(:), tol )

  end subroutine test_pres_interp

end module pres_interp_kernel_mod_test
