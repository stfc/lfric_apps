        "plot_str": "sbr.py $NODAL_DATA_DIR/lfric_diag.nc $PLOT_DIR uniform 10 11 gw-default buoyancy 0:0:6",
    }) %}

{% elif task_ns.conf_name == "multigrid-C24_MG" %}

    {% do task_dict.update({
        "opt_confs": ["multigrid"],
        "resolution": "C24_MG",
        "DT": 100,
        "tsteps": 36,
